
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the sharedMaps collection
    match /sharedMaps/{mapId} {
      // Allow anyone to read a shared map document.
      allow read: if true;
      // Allow anyone to create a new shared map document.
      allow create: if true;
      // Disallow updating or deleting shared maps to keep them permanent.
      allow update, delete: if false;
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
