
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for shared map states
    match /sharedMaps/{mapId} {
      // Allow anyone to read or create a shared map state.
      // Update/delete is disallowed to prevent modification of shared links.
      allow read, create: if true;
      allow update, delete: if false;
    }
  }
}
