rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para perfiles de agentes del juego
    match /agents/{userId} {
      // Un usuario solo puede leer y escribir su propio perfil.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para mapas compartidos
    match /sharedMaps/{mapId} {
      // Cualquiera puede leer un mapa si tiene el enlace (ID).
      allow read: if true;
      // Cualquiera (autenticado o no) puede crear un nuevo mapa compartido.
      allow create: if true;
      // Nadie puede modificar o borrar un mapa una vez creado.
      allow update, delete: if false;
    }
  }
}
